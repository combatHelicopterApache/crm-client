{
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "tabWidth": 4,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "formatOnSave": true,
    "formatOnType": true,
    "eslint": { "enable": true },
    "proseWrap": "always",
    "editor": {
        "codeActionsOnSave": {
            "source": {
                "fixAll": {
                    "eslint": true
                }
            }
        }
    }
}